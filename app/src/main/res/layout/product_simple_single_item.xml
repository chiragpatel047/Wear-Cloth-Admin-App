<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:background="@color/main_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/second_backgroud"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/remove_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:padding="12dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/cancel"
                    app:tint="@color/second_font_color" />


                <ImageView
                    android:id="@+id/remove_image2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="-28dp"
                    android:layout_marginBottom="3dp"
                    android:padding="10dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/item_new_price2"
                    app:layout_constraintEnd_toStartOf="@+id/item_new_price2"
                    app:layout_constraintTop_toTopOf="@+id/item_new_price2"
                    app:srcCompat="@drawable/edit"
                    app:tint="@color/main_red" />

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="Evening Dress"
                    android:textColor="@color/font_color"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/remove_image"
                    app:layout_constraintStart_toEndOf="@+id/item_image"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="Dorothy prikins"
                    android:textColor="@color/second_font_color"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/item_text"
                    app:layout_constraintStart_toStartOf="@+id/item_text"
                    app:layout_constraintTop_toBottomOf="@+id/item_text" />

                <TextView
                    android:id="@+id/item_number_of_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="(10)"
                    android:textColor="@color/second_font_color"
                    android:textSize="9sp"
                    app:layout_constraintBottom_toBottomOf="@+id/item_rating"
                    app:layout_constraintStart_toEndOf="@+id/item_rating"
                    app:layout_constraintTop_toTopOf="@+id/item_rating" />

                <RatingBar
                    android:id="@+id/item_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:progressTint="@color/rating_color"
                    android:progressBackgroundTint="@color/second_font_color"
                    android:rating="3.5"
                    android:secondaryProgressTint="@color/rating_color"
                    app:layout_constraintStart_toStartOf="@+id/item_name"
                    app:layout_constraintTop_toBottomOf="@+id/item_name">

                </RatingBar>

                <TextView
                    android:id="@+id/item_strike"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/price_strike"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/second_font_color"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/item_old_price"
                    app:layout_constraintEnd_toEndOf="@+id/item_old_price"
                    app:layout_constraintStart_toStartOf="@+id/item_old_price"
                    app:layout_constraintTop_toTopOf="@+id/item_old_price" />

                <TextView
                    android:id="@+id/item_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="15dp"
                    android:text="10$"
                    android:textColor="@color/main_red"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/item_strike"
                    app:layout_constraintTop_toTopOf="@+id/item_old_price" />

                <TextView
                    android:id="@+id/item_new_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="20dp"
                    android:paddingRight="3dp"
                    android:text="Edit"
                    android:textColor="@color/main_red"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/item_old_price" />

                <TextView
                    android:id="@+id/item_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="15$"
                    android:textColor="@color/second_font_color"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/item_rating"
                    app:layout_constraintTop_toBottomOf="@+id/item_rating" />

                <TextView
                    android:id="@+id/not_available"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#40000000"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:text="Sorry, this item is currently sold out"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/item_new_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/entire_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#40000000"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>